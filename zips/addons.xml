<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="repository.brumovicecinema" name="Brumovice Cinema Repository" version="1.0.0" provider-name="Pavel">
    <extension point="xbmc.addon.repository"
               name="Brumovice Cinema Repository"
               datadir="https://sniperpoll.github.io/Brumovice_Cinema/zips/"
               info="https://sniperpoll.github.io/Brumovice_Cinema/zips/addons.xml"
               checksum="https://sniperpoll.github.io/Brumovice_Cinema/zips/addons.xml.md5"
               compressed="true" />
    <extension point="xbmc.addon.metadata" >
        <summary lang="en">Repository for Brumovice Cinema</summary>
        <description lang="en">GitHub-hosted repo for Brumovice Cinema</description>
        <platform>all</platform>
    </extension>
</addon>

<addon id="plugin.video.brumovicecinema" name="Brumovice Cinema" version="0.0.1" provider-name="Pavel">
    <requires>
        <!-- intentionally no xbmc.python version to allow broader compatibility -->
    </requires>
    <extension point="xbmc.python.pluginsource" library="main.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata" icon="resources/icon.png" fanart="resources/fanart.jpg">
        <summary lang="en">Brumovice Cinema basic test addon</summary>
        <description lang="en">Clean and functional addon based on Webshare Cinema structure</description>
        <platform>all</platform>
    </extension>
</addon>
</addons>
